# DataHut-DuckHouse Environment Configuration

# ====================================
# Database Configuration
# ====================================

# DuckDB local database path
DUCKDB_PATH=ingestion/data/duckhouse.duckdb

# ====================================
# Arrow Flight Server Configuration
# ====================================

# Flight server connection details
FLIGHT_SERVER_HOST=localhost
FLIGHT_SERVER_PORT=8815

# Default table name for ingestion
FLIGHT_TABLE_NAME=data_table

# Default target for data writes (duckdb or iceberg)
FLIGHT_TARGET=duckdb

# ====================================
# Data Ingestion Configuration
# ====================================

# Path to CSV file for ingestion
CSV_PATH=ingestion/data/data.csv

# ====================================
# Iceberg Configuration
# ====================================

# Iceberg warehouse configuration
ICEBERG_WAREHOUSE=s3://duckhouse-warehouse/
ICEBERG_NAMESPACE=default
ICEBERG_CATALOG=minio_catalog

# ====================================
# S3/MinIO Configuration
# ====================================

# MinIO credentials (for local development)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123

# MinIO endpoint (use minio:9000 for Docker, localhost:9000 for local)
S3_ENDPOINT=http://localhost:9000

# ====================================
# dbt Configuration
# ====================================

# dbt profiles and project directories
DBT_PROFILES_DIR=transform/dbt_project/config
DBT_PROJECT_DIR=transform/dbt_project

# ====================================
# Trino Configuration
# ====================================

# Trino connection settings
TRINO_HOST=localhost
TRINO_PORT=8080
TRINO_USER=datahut
TRINO_CATALOG=iceberg
TRINO_SCHEMA=default

# ====================================
# Monitoring & Observability
# ====================================

# Jaeger tracing endpoint (optional)
JAEGER_ENDPOINT=localhost

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable monitoring features
ENABLE_MONITORING=true
ENABLE_TRACING=false

# ====================================
# Development Configuration
# ====================================

# Environment type (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# ====================================
# Performance Configuration
# ====================================

# Arrow Flight batch size
FLIGHT_BATCH_SIZE=10000

# DuckDB memory limit
DUCKDB_MEMORY_LIMIT=2GB

# Number of worker threads
WORKER_THREADS=4

# ====================================
# Security Configuration
# ====================================

# Enable authentication (future feature)
ENABLE_AUTH=false

# API key for external services (if needed)
# API_KEY=your-api-key-here

# ====================================
# Docker Configuration
# ====================================

# Docker network name
DOCKER_NETWORK=datahut-network

# Volume names
MINIO_VOLUME=minio_data
DUCKDB_VOLUME=duckdb_data
